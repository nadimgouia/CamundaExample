<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="nadim.com.ndroid.isi.StudentHomeActivity">


    <LinearLayout
        android:id="@+id/slideImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:background="@drawable/slide_img1"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="85"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/slideLeft"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:scaleType="fitXY"
                    android:src="@drawable/left_arrow" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"></Space>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/slideRight"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:scaleType="fitXY"
                    android:src="@drawable/right_arrow" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/slideText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:background="#a9000000"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="#CodingCamp - ISI GOOGLE CLUB"
            android:textColor="#fff"
            android:textStyle="bold"></TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="59"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="100">


        <ListView
            android:id="@+id/listProcess"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

</LinearLayout>